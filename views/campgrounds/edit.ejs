<% include ../partials/header %>
    <!-- Page Contents -->
    <main class="container">
      <form class="login-register" action="/campgrounds/<%= campground._id %>?_method=PATCH" method="POST" enctype="multipart/form-data">
        
        <div class="text-center mb-4">
          <h1 class="h3 mb-3 font-weight-normal">Edit Campground</h1>
        </div>

        <div class="form-group">
          <input id="name" class="form-control" value="<%= campground.name %>" type="text" name="name" placeholder="Name">
          <label for="name">Name</label>
        </div>
       
        <div class="form-group">
          <input id="campground-price" class="form-control" value="<%= campground.price %>" type="number" name="price" placeholder="Price (USD per day)" min="0.00" step="0.01" required>
          <label for="campground-price">Price (USD per day)</label>
        </div>
       
        <div class="form-group">
          <input id="campground-desc" class="form-control" value="<%= campground.description %>" type="text" name="description" placeholder="Description" required>
          <label for="campground-desc">Description</label>
        </div>

        <div class="form-group">
          <input id="campground-location" class="form-control" value="<%= campground.location %>" type="text" name="location" placeholder="Yosemite National Park, CA" required>
          <label for="campground-location">Location (ex: Yosemite National Park, CA)</label>
        </div>

        <div class="form-group">
          <input id="campground-image" class="form-control" type="file" accept="image/*" name="image" autocomplete="off">
          <label for="campground-image">Image</label>
        </div>

        <button class="btn btn-lg btn-secondary btn-block" type="submit">Update</button>
        <a href="/campgrounds"><span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span> Go Back</a>

      </form>
    </main>      

<% include ../partials/footer %>